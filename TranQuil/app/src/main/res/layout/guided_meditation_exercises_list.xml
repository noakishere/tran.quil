<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <!-- Layout Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:padding="8dp">

        <!-- Activity Image (or clip art) -->
        <ImageView
            android:id="@+id/activityImageGuidedMeditationList"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Activity Title -->
        <TextView
            android:id="@+id/activityTitleGuidedMeditationList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="activity-title"
            android:textColor="@color/sandy_beach"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activityImageGuidedMeditationList" />

        <!-- Activity Type (image) -->
        <ImageView
            android:id="@+id/meditationCoursesImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_default_meditation"
            app:layout_constraintBottom_toBottomOf="@+id/activityTypeGuidedMeditationList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activityTypeGuidedMeditationList"
            app:tint="@color/cloud_white" />

        <!-- Activity Type -->
        <TextView
            android:id="@+id/activityTypeGuidedMeditationList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:text="type"
            android:textColor="@color/cloud_white"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/activityLengthGuidedMeditationList"
            app:layout_constraintStart_toEndOf="@+id/meditationCoursesImage"
            app:layout_constraintTop_toBottomOf="@+id/activityTitleGuidedMeditationList" />

        <!-- Activity Length -->
        <TextView
            android:id="@+id/activityLengthGuidedMeditationList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxWidth="80dp"
            android:gravity="right"
            android:text="xx-xx min"
            android:textColor="@color/cloud_white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/activityTypeGuidedMeditationList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activityTypeGuidedMeditationList" />

        <!-- Activity Title -->
        <TextView
            android:id="@+id/activityDescriptionGuidedMeditationList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="activity-description"
            android:textColor="@color/cloud_white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activityTypeGuidedMeditationList" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>