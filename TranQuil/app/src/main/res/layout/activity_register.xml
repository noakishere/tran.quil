<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue"
    tools:context=".Register">

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameLoginScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/app_name"
        android:textColor="@color/sandy_beach"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogoLoginScreen"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/placeholder1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameLoginScreen"
        android:contentDescription="@string/app_logo_desc" />

    <!-- App Slogan -->
    <TextView
        android:id="@+id/appSloganLoginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/app_slogan"
        android:textColor="@color/sandy_beach"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appLogoLoginScreen" />

    <!-- User Personal Information and Account Information -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appSloganLoginPage">

        <!-- User Account Information -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/userAccountInformationContainerRegisterPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- User First Name -->
            <androidx.cardview.widget.CardView
                android:id="@+id/userFirstNameContainerRegisterPage"
                android:layout_width="275dp"
                android:layout_height="45dp"
                app:cardBackgroundColor="@color/sandy_beach"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/userFirstNameEditTextRegisterPage"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_default_pfp_filled"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/earthy_soil"
                    android:hint="First Name"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/earthy_soil"
                    android:textColorHint="@color/earthy_soil"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_default_pfp_filled" />
            </androidx.cardview.widget.CardView>

            <!-- User Last Name -->
            <androidx.cardview.widget.CardView
                android:id="@+id/userLastNameContainerRegisterPage"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/sandy_beach"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userFirstNameContainerRegisterPage">

                <EditText
                    android:id="@+id/userLastNameEditTextRegisterPage"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_default_pfp_filled"
                    android:drawableLeft="@drawable/ic_default_pfp_filled"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/earthy_soil"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/earthy_soil"
                    android:textColorHint="@color/earthy_soil"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userLastNameContainerRegisterPage">

                <!-- User Age Name -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/userAgeContainerRegisterPage"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/sandy_beach"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userFirstNameContainerRegisterPage">

                    <EditText
                        android:id="@+id/userAgeEditTextRegisterPage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_default_pfp_filled"
                        android:drawableLeft="@drawable/ic_default_pfp_filled"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/earthy_soil"
                        android:hint="Age"
                        android:inputType="text"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/earthy_soil"
                        android:textColorHint="@color/earthy_soil"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>

                <!-- User Sex -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/userSexContainerRegisterPage"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/sandy_beach"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userFirstNameContainerRegisterPage">

                    <EditText
                        android:id="@+id/userSexEditTextRegisterPage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_default_pfp_filled"
                        android:drawableLeft="@drawable/ic_default_pfp_filled"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/earthy_soil"
                        android:hint="Sex"
                        android:inputType="text"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/earthy_soil"
                        android:textColorHint="@color/earthy_soil"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>