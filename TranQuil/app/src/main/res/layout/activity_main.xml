<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFEAB1"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="249dp"
        android:layout_height="58dp"
        android:layout_marginTop="44dp"
        app:cardBackgroundColor="@color/raincloud_blue"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


        <EditText
            android:id="@+id/idTextView"
            android:layout_width="221dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:background="@color/raincloud_blue"
            android:hint="Enter your username here"
            android:textColor="#F8F3EC"

            android:textColorHint="#FFC107"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="249dp"
        android:layout_height="58dp"
        android:layout_marginTop="144dp"
        app:cardBackgroundColor="@color/raincloud_blue"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/cardview1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardview1"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <EditText
            android:id="@+id/passwordTextView"
            android:layout_width="223dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@color/raincloud_blue"
            android:hint="Enter your password here"
            android:shadowColor="#FFFFFF"
            android:textColor="#35459C"
            android:textColorHint="#FFC107"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="413dp" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="191dp"
        android:layout_height="144dp"
        android:layout_marginTop="80dp"
        android:background="#E0E3F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/placeholder1" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@color/raincloud_blue"
        android:text="LOGIN"
        android:onClick="loginAndValidate"
        android:textColor="#FFC107"
        app:backgroundTint="@color/raincloud_blue"
        app:layout_constraintEnd_toEndOf="@+id/cardview2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/cardview2"
        app:layout_constraintTop_toBottomOf="@+id/cardview2" />

    <TextView
        android:id="@+id/resgisterTextView"
        android:layout_width="319dp"
        android:layout_height="33dp"
        android:layout_marginTop="92dp"
        android:onClick="openRegisterActivity"
        android:text="Don't have an account ? Click here to RESGISTER!"
        android:textColor="#3C1E70"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>